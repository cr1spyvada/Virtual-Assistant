<Chattwidget>
	MDGridLayout:
		cols:1
		size:root.width,root.height
		# _init_:root.wished()
		ScrollView:
			do_scroll_x:False
			do_scroll_y:True

			canvas.before:
				Color:
					rgba:1,1,1,1
				Rectangle:
					source:'forest_bg1.jpg'
					pos:self.pos
					size:self.size
		
			MDGridLayout:
				id:flayout
				cols:1
				spacing:20
				padding:50
				row_default_height:20
				size_hint_y:None
				height:self.minimum_height
				# _init_:root.flay_store(flayout)
			

		MDGridLayout:
			cols:3
			size_hint:0.3,0.1
			spacing:140
			# canvas.before:
			# 	Color:
			# 		rgba:1,1,1,1
			# 	Rectangle:
			# 		source:'Wasteland_Sky.png'
			# 		pos:self.size
			# 		size:self.size
			# padding:-10

			MDFloatingActionButton:
				icon:'microphone'
				md_bg_color:self.theme_cls.primary_color
				pos_hint:{'left':.6,'y':1}
				on_press:root.run_asst()
		
			MDTextFieldRound:
				id:txt_inpt
				mode:'rectangle'
				hint_text:"How can i help you"
				normal_color:0.5,1,0.5,0
				color_active:0,1,0,1
				line_color_focus:0.5,1,0,1
				pos_hint:{'center_x':1,'center_y':1}
				# multiline:True
				size_hint_x:None
				width:400
				size_hint_y:30

			MDFloatingActionButton:
				icon:'send'
				md_bg_color:self.theme_cls.primary_color
				pos_hint:{'right':0}
				on_press:
					root.sendM(txt_inpt.text,True)
					root.emptee(txt_inpt)
